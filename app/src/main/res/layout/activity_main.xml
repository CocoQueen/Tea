<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.coco.teademo.ui.activity.MainActivity">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="60dp"-->
    <!--android:layout_alignParentBottom="true">-->


    <RadioGroup
        android:id="@+id/mRg"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="#c6c6c6"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/mRb_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/item_home"
            android:gravity="center"
            android:text="home" />

        <RadioButton
            android:id="@+id/mRb_service"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/item_service"
            android:gravity="center"
            android:text="service" />

        <RadioButton
            android:id="@+id/mRb_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/item_order"
            android:gravity="center"
            android:text="order" />

        <RadioButton
            android:id="@+id/mRb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/item_mine"
            android:gravity="center"
            android:text="mine" />
    </RadioGroup>
    <!--</LinearLayout>-->

</RelativeLayout>
